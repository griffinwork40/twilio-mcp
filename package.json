{
  "name": "twilio-mcp",
  "version": "1.0.0",
  "description": "MCP server for Twilio SMS with AI-powered conversation management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "twilio-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "twilio",
    "sms",
    "ai",
    "conversation",
    "messaging"
  ],
  "author": "Griffin Long",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/griffinlong/twilio-mcp.git"
  },
  "homepage": "https://github.com/griffinlong/twilio-mcp#readme",
  "bugs": {
    "url": "https://github.com/griffinlong/twilio-mcp/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "twilio": "^5.3.4",
    "express": "^4.21.2",
    "zod": "^3.24.1",
    "uuid": "^11.0.3",
    "better-sqlite3": "^11.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/express": "^5.0.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/uuid": "^10.0.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "supertest": "^7.0.0"
  }
